{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BookDocument",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "title",
    "isbn",
    "releaseYear",
    "publisher",
    "authors"
  ],
  "properties": {
    "id": {
      "type": ["string", "null"]
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "isbn": {
      "type": "string",
      "minLength": 5
    },
    "releaseYear": {
      "type": "integer",
      "minimum": 1800,
      "maximum": 2100
    },
    "publisher": {
      "type": "object",
      "required": [
        "name",
        "address"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "address": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "authors": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}

